<?xml version="1.0" encoding="UTF-8"?>
<project>
  <name>Todo Full Stack Application</name>
  <description>Full-stack todo application with Node.js API and NextJS frontend</description>
  <version>1.0.0</version>
  <structure>
    <api>
      <framework>Node.js + Express</framework>
      <database>SQLite with Prisma ORM</database>
      <authentication>JWT-based authentication</authentication>
      <testing>Jest + Supertest for e2e</testing>
      <location>./api</location>
    </api>
    <web>
      <framework>NextJS 14 with TypeScript</framework>
      <ui>shadcn/ui components</ui>
      <styling>Tailwind CSS</styling>
      <authentication>NextAuth.js</authentication>
      <testing>Playwright for e2e</testing>
      <location>./web</location>
    </web>
  </structure>
  <features>
    <feature>Todo CRUD operations</feature>
    <feature>User authentication and authorization</feature>
    <feature>Responsive design</feature>
    <feature>Comprehensive e2e testing</feature>
  </features>
  <architecture>
    <pattern>Monorepo with separate API and Web applications</pattern>
    <maxLinesPerFile>300</maxLinesPerFile>
    <organization>Feature-based organization</organization>
  </architecture>
</project>